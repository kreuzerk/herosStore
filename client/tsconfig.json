{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "typings/app.d.ts",
    "typings/app"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "src/custom-typings.d.ts",
    "typings/browser.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "./src/app/app.component.ts",
    "./src/app/app.ts",
    "./src/app/components/body/body.component.ts",
    "./src/app/components/create-hero/create.hero.component.ts",
    "./src/app/components/create-hero/hero-form/hero.form.component.ts",
    "./src/app/components/create-hero/title-image/title.image.component.ts",
    "./src/app/components/hero-list/hero.list.component.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
